extends layout/master.jade

block header
	#logo

block content
	.main
		#purchase--cc.page--full.row
			.col.m12.s12.l7
				.form--input
					.form--title
						h1.headline Billing information
						h3.subhead Your information will be <br> kept safe and secure 
					div.input-field
						label(for='card-holder-name') Card Holder Name
						input#card-holder-name(type='text' class='validate')
					div.input-field.card-number
						label(for='card-number') Card number
						input#card-number(type='text' class='validate')
					div.input-field.card-cvv
						label(for='card-cvv') CVV
						input#card-cvv(type='text' class='validate')
					div.input-field.card-month
						label(for='card-month') Month
						input#card-cvv(type='text' class='validate')
					div.input-field.card-day
						label(for='card-day') Day
						input#card-cvv(type='text' class='validate')
					div.input-field.card-year
						label(for='card-year') Year
						input#card-cvv(type='text' class='validate')
				.purchase--button.waves-effect.waves-light.btn-large Pay $9.99/mo

				.alert--message.center
					| You can cancel at any time
			.aside--purchase-cc.col.l5.hide-on-med-and-down
				.aside--purchase-cc-quote
					figure.aside--figure
						img.responsive-img(src="dist/images/omelo-card.png")