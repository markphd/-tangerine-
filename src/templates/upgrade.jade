extends layout/master.jade

block header
	#logo

block content
	.main
		#upgrade-modal.modal
			.modal-content
				h1.upgrade--headline Upgrade to Pro?
				h3.upgrade--subhead Unlimited project timelines
				//- h3.upgrade--subhead Unlimited project timelines, <br> for $9/mo
				.upgrade--plan
					button.monthly.selected Monthly
					button.yearly Yearly
				.upgrade--figure
				.upgrade--button.waves-effect.waves-light.btn-large Upgrade for $9/mo
	script.
		var buttonMonthly = document.getElementsByClassName('monthly')[0];
		var buttonYearly = document.getElementsByClassName('yearly')[0];
		var upgradeButton = document.getElementsByClassName('upgrade--button')[0];

		buttonYearly.addEventListener('click', function(){			
			buttonMonthly.classList.remove('selected');
			if(!this.classList.contains('selected')) {
				this.className += ' selected'
			}
			upgradeButton.textContent = "Upgrade for $92"
		}, false)

		buttonMonthly.addEventListener('click', function(){
			buttonYearly.classList.remove('selected');
			if(!this.classList.contains('selected')) {
				this.className += ' selected'
			}
			upgradeButton.textContent = "Upgrade for $9/mo"
		}, false)

		

