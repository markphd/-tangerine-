extends layout/master.jade

block content
	.main
		.page--full.row
			.col.m12.s12.l7
				.form--input
					.form--title
						h1.headline Billing information
						h3.subhead Your information will be <br> kept safe and secure 
					div.input-field
						label(for='card-holder-name') Card Holder Name
						input#card-holder-name(type='text' class='validate')
					div.input-field
						label(for='password') Password
						input#signup-password(type='password' class='validate')
						p.inner--label 6+ characters

				.form--button.waves-effect.waves-light.btn-large Sign up

				.input--help.center
					a(href="#") Already have an account?
			.aside--testimonial.col.l5.hide-on-med-and-down
				.aside--testimonial-quote
					h2 Omelo has enabled me to push <br> code, not deadlines
					p -Moe A (Dixon&moe.com)
					figure.aside--figure
						img.responsive-img(src="dist/images/devices.png")